{
  "name": "angrplayr",
  "description": "Console music player in Node.",
  "version": "1.4.3",
  "author": {
    "email": "zac@zacanger.com",
    "name": "Zac Anger",
    "url": "http://zacanger.com"
  },
  "license": "MIT",
  "main": "index.js",
  "files": [
    "index.js",
    "lib"
  ],
  "preferGlobal": true,
  "bin": "./index.js",
  "scripts": {
    "build": "babel src/ -d lib/",
    "cover": "nyc npm run test:tape",
    "demo": "babel-node src/index.js",
    "prebuild": "npm test && sortpack",
    "preinstall": "hash mplayer 2>/dev/null || { echo >&2 'Please install mplayer.' ; exit 1 ; }",
    "preversion": "npm run build",
    "start": "node index",
    "test": "npm run test:lint && npm run cover",
    "test:lint": "eslint -c .eslintrc.json src",
    "test:tape": "babel-tape-runner src/*.test.js | tap-spec"
  },
  "homepage": "https://github.com/zacanger/angrplayr#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/zacanger/angrplayr.git"
  },
  "bugs": "https://github.com/zacanger/angrplayr/issues",
  "keywords": [
    "angrplayr",
    "audio",
    "console",
    "mp3",
    "music",
    "player",
    "terminal",
    "zacanger"
  ],
  "dependencies": {
    "@babel/register": "7.4.4",
    "blessed": "0.1.81",
    "mime": "2.4.3",
    "mplayer": "2.1.0",
    "music-metadata": "4.0.1",
    "react": "16.8.6",
    "react-blessed": "0.6.0",
    "react-blessed-contrib": "0.2.1",
    "zeelib": "8.6.0"
  },
  "devDependencies": {
    "@babel/cli": "7.4.4",
    "@babel/core": "7.4.5",
    "@babel/node": "7.4.5",
    "@babel/plugin-proposal-class-properties": "7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "7.4.4",
    "@babel/preset-env": "7.4.5",
    "@babel/preset-react": "7.0.0",
    "babel-eslint": "10.0.1",
    "babel-tape-runner": "3.0.0",
    "eslint": "5.16.0",
    "eslint-config-zacanger": "3.4.3",
    "eslint-plugin-babel": "5.3.0",
    "eslint-plugin-import": "2.17.3",
    "eslint-plugin-node": "9.1.0",
    "eslint-plugin-promise": "4.1.1",
    "eslint-plugin-react": "7.13.0",
    "eslint-plugin-unicorn": "9.0.0",
    "nyc": "14.1.1",
    "sortpack": "1.1.7",
    "tap-spec": "5.0.0",
    "tape": "4.10.2"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "nyc": {
    "include": [
      "src"
    ],
    "instrument": true,
    "reporter": [
      "text",
      "html",
      "json"
    ],
    "require": [
      "@babel/register"
    ],
    "sourceMap": true
  }
}
