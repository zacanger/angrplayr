{
  "name": "angrplayr",
  "description": "Console music player in Node.",
  "version": "2.0.7",
  "author": {
    "email": "zac@zacanger.com",
    "name": "Zac Anger",
    "url": "http://zacanger.com"
  },
  "license": "LGPL-3.0",
  "main": "index.js",
  "files": [
    "index.js",
    "lib"
  ],
  "preferGlobal": true,
  "bin": "./index.js",
  "scripts": {
    "build": "babel src/ -d lib/",
    "cover": "nyc npm run test:tape",
    "demo": "babel-node src/index.js",
    "prebuild": "npm test && sortpack",
    "preinstall": "hash mplayer 2>/dev/null || { echo >&2 'Please install mplayer.' ; exit 1 ; }",
    "preversion": "npm run build",
    "start": "node index",
    "test": "npm run test:lint && npm run cover",
    "test:lint": "eslint -c .eslintrc.json src",
    "test:tape": "babel-tape-runner src/*.test.js | tap-spec"
  },
  "homepage": "https://github.com/zacanger/angrplayr#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/zacanger/angrplayr.git"
  },
  "bugs": "https://github.com/zacanger/angrplayr/issues",
  "keywords": [
    "angrplayr",
    "audio",
    "console",
    "mp3",
    "music",
    "player",
    "terminal",
    "zacanger"
  ],
  "dependencies": {
    "@babel/register": "7.8.3",
    "blessed": "0.1.81",
    "mime": "2.4.4",
    "mplayer": "2.1.0",
    "music-metadata": "6.3.0",
    "react": "16.12.0",
    "react-blessed": "0.6.2",
    "react-blessed-contrib": "0.2.1",
    "zeelib": "11.0.6"
  },
  "devDependencies": {
    "@babel/cli": "7.8.3",
    "@babel/core": "7.8.3",
    "@babel/node": "7.8.3",
    "@babel/plugin-proposal-class-properties": "7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "7.8.3",
    "@babel/preset-env": "7.8.3",
    "@babel/preset-react": "7.8.3",
    "babel-eslint": "10.0.3",
    "babel-tape-runner": "3.0.0",
    "eslint": "6.8.0",
    "eslint-plugin-zacanger": "0.0.3",
    "nyc": "15.0.0",
    "prettier": "1.19.1",
    "sortpack": "2.0.4",
    "tap-spec": "5.0.0",
    "tape": "4.13.0"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "nyc": {
    "include": [
      "src"
    ],
    "instrument": true,
    "reporter": [
      "text",
      "html",
      "json"
    ],
    "require": [
      "@babel/register"
    ],
    "sourceMap": true
  },
  "funding": {
    "type": "ko-fi",
    "url": "https://ko-fi.com/zacanger"
  }
}
